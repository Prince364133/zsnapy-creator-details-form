<div class="form-container">
  <div class="connection-indicator" id="connectionIndicator"></div>
  
  <div class="form-content">
    <h2>Contact Us</h2>
    
    <form id="contactForm">
      <div class="form-group">
        <input type="text" id="name" placeholder="Your Full Name" required>
      </div>
      
      <div class="form-group">
        <input type="email" id="email" placeholder="Your Email Address" required>
      </div>
      
      <div class="form-group">
        <input type="text" id="subject" placeholder="Subject" required>
      </div>
      
      <div class="form-group">
        <textarea id="message" placeholder="Your Message" required></textarea>
      </div>
      
      <button type="submit" id="submitBtn" class="submit-btn">
        Send Message
      </button>
    </form>
    
    <div class="status" id="statusMsg" style="display: none;"></div>
    <div class="debug" id="debugInfo">Initializing Firebase...</div>
  </div>
</div>

<!-- Firebase SDK v9 with fallback -->
<script type="module">
  import { initializeApp } from 'https://www.gstatic.com/firebasejs/9.23.0/firebase-app.js';
  import { getDatabase, ref, push, serverTimestamp, onValue } from 'https://www.gstatic.com/firebasejs/9.23.0/firebase-database.js';

  // Firebase configuration
  const firebaseConfig = {
    apiKey: "AIzaSyAzoGp2rt4CB9e5yazdlK-0G28Dp7TbXtQ",
    authDomain: "zsnapypro-d9d22.firebaseapp.com",
    databaseURL: "https://zsnapypro-d9d22-default-rtdb.firebaseio.com/",
    projectId: "zsnapypro-d9d22",
    storageBucket: "zsnapypro-d9d22.firebasestorage.app",
    messagingSenderId: "614389089654",
    appId: "1:614389089654:web:b4e8d502a8c0e996146657",
    measurementId: "G-7EVYDYL4GX"
  };

  // Global variables
  let database;
  const debugInfo = document.getElementById('debugInfo');
  const statusMsg = document.getElementById('statusMsg');
  const connectionIndicator = document.getElementById('connectionIndicator');

  // Initialize Firebase
  async function initializeFirebase() {
    try {
      debugInfo.textContent = 'Connecting to Firebase...';
      
      const app = initializeApp(firebaseConfig);
      database = getDatabase(app);
      
      debugInfo.textContent = 'Firebase initialized successfully';
      
      // Monitor connection
      const connectedRef = ref(database, '.info/connected');
      onValue(connectedRef, (snapshot) => {
        if (snapshot.val() === true) {
          debugInfo.textContent = '✅ Connected to Firebase';
          debugInfo.style.color = '#4caf50';
          connectionIndicator.classList.add('connected');
        } else {
          debugInfo.textContent = '❌ Disconnected from Firebase';
          debugInfo.style.color = '#f44336';
          connectionIndicator.classList.remove('connected');
        }
      });
      
    } catch (error) {
      debugInfo.textContent = `❌ Firebase Error: ${error.message}`;
      debugInfo.style.color = '#f44336';
      console.error('Firebase initialization error:', error);
    }
  }

  // Form submission handler
  function handleFormSubmit(e) {
    e.preventDefault();
    
    if (!database) {
      showStatus('❌ Firebase not ready. Please wait...', 'error');
      return;
    }
    
    const submitBtn = document.getElementById('submitBtn');
    const formData = {
      name: document.getElementById('name').value.trim(),
      email: document.getElementById('email').value.trim(),
      subject: document.getElementById('subject').value.trim(),
      message: document.getElementById('message').value.trim()
    };
    
    // Validation
    if (!formData.name || !formData.email || !formData.subject || !formData.message) {
      showStatus('❌ Please fill in all fields', 'error');
      return;
    }
    
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!emailRegex.test(formData.email)) {
      showStatus('❌ Please enter a valid email address', 'error');
      return;
    }
    
    // Show loading state
    submitBtn.disabled = true;
    submitBtn.textContent = 'Sending...';
    showStatus('<div class="loader"></div>Sending your message...', 'loading');
    
    // Prepare data for Firebase
    const contactData = {
      ...formData,
      timestamp: serverTimestamp(),
      submittedAt: new Date().toISOString(),
      userAgent: navigator.userAgent,
      ip: 'client-side' // You'd need a service to get real IP
    };
    
    // Send to Firebase
    const queriesRef = ref(database, 'queries');
    push(queriesRef, contactData)
      .then(() => {
        showStatus('✅ Message sent successfully!', 'success');
        document.getElementById('contactForm').reset();
        debugInfo.textContent = '✅ Message delivered to database';
        debugInfo.style.color = '#4caf50';
      })
      .catch((error) => {
        console.error('Database Error:', error);
        showStatus(`❌ Error: ${error.message}`, 'error');
        debugInfo.textContent = `❌ Database Error: ${error.code} - ${error.message}`;
        debugInfo.style.color = '#f44336';
      })
      .finally(() => {
        submitBtn.disabled = false;
        submitBtn.textContent = 'Send Message';
      });
  }

  // Show status message
  function showStatus(message, type) {
    statusMsg.innerHTML = message;
    statusMsg.className = `status ${type}`;
    statusMsg.style.display = 'flex';
    
    if (type === 'success') {
      setTimeout(() => {
        statusMsg.style.display = 'none';
      }, 5000);
    }
  }

  // Initialize when DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    initializeFirebase();
    document.getElementById('contactForm').addEventListener('submit', handleFormSubmit);
  });

  // Global test function
  window.testFirebase = function() {
    if (!database) {
      console.log('❌ Database not initialized');
      return;
    }
    
    const testRef = ref(database, 'test');
    push(testRef, {
      test: 'Hello Firebase!',
      timestamp: serverTimestamp()
    }).then(() => {
      console.log('✅ Test successful!');
    }).catch((error) => {
      console.error('❌ Test failed:', error);
    });
  };

</script>

<!-- Fallback for older browsers -->
<script nomodule>
  document.getElementById('debugInfo').textContent = '❌ Your browser doesn\'t support ES6 modules. Please update your browser.';
  document.getElementById('debugInfo').style.color = '#f44336';
</script>


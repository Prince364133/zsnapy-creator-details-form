    const app = initializeApp(firebaseConfig);
    const db = getFirestore(app);

    async function loadData(){
      const snapshot = await getDocs(collection(db, "influencers"));
      let tbody = document.getElementById("data");
      snapshot.forEach(doc => {
        let d = doc.data();
        tbody.innerHTML += `
          <tr>
            <td>${d.name}</td>
            <td>${d.email}</td>
            <td>${d.whatsapp}</td>
            <td>${d.insta}</td>
            <td>${d.followers}</td>
            <td>${d.reach}</td>
            <td>${d.location}</td>
            <td>${d.category}</td>
            <td>${d.collab}</td>
          </tr>`;
      });
    }
    loadData();
